<Gerenciador>:
	Menu:
		name: "menu_name"	

	# sem utilidade mais
	#Screen:
	#	Button:
	#		text: "Ver Tarefas"
	#		on_release: root.current = "tarefas_name"

	
	Tarefas:
		name: "tarefas_name"
	
	Ajuda:
		name: "ajuda_name"


<Menu>:
	BoxLayout:
		orientation: "vertical"
		padding: 100
		spacing: 40 
		canvas:
			Color:
				rgba: (0,0.1,0.09,1)
			Rectangle:
				size: self.size
				pos: 0, 0
				source: "moldura.png"
		Image:
			source: "logo-tasks-admin-menu.png"
			size_hint_y: None
			height: 200
			allow_stretch: True

		Button:
			text: "Tarefas"
			on_release: app.root.current = 'tarefas_name'
		Button:
			text: "Ajuda"
			on_release: app.root.current = "ajuda_name"
		Button:
			text: "Sair"
			on_release: app.stop()


<Ajuda>:
	BoxLayout:
		orientation: "vertical"
		ActionBar:
			ActionView:
				ActionPrevious:
					title: "Ajuda"
				ActionButton:
					text: "Voltar"
					on_release: app.root.current = "menu_name"


		ScrollView:
			BoxLayout:
				id: box_ajuda
				orientation: "vertical"
				size_hint_y: None
				height: self.minimum_height

		Label:
			text: "Ajuda"
			align: "center"


		GridLayout:
			rows: 3
			cols: 1
			

			Label:
				text: "Esse aplicativo tem a finalidade de organizar tarefas"
				
			Label:
				text: "Use a interface amigável do app"	

			Label:
				text: "Feche quando não precisar mais do aplicativo"



<Tarefas>:
	BoxLayout:
		orientation: "vertical"
		ActionBar:
			ActionView:
				ActionPrevious:
					title: "Tarefas"
					on_release: app.root.current = "menu_name"
				ActionButton:
					text: "Menu"
				ActionSeparator:	
				ActionButton:
					text: "Sair"
					on_release: app.stop()
				

		ScrollView:	
			BoxLayout:
				id: box
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height

		BoxLayout:
			size_hint_y: None
			height: 60
			TextInput:
				id: texto

			Button:
				text: "+"
				size_hint_x: None
				on_release: root.addWidget()
		



<Tarefa>:
	size_hint_y: None
	height: 200

	Label:
		id: label
		font_size: 30


	Button:
		text: "X"
		size_hint_x: None
		width: 60
		on_release: app.root.get_screen('tarefas_name').ids.box.remove_widget(self.parent)
